<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.carservice.persistence.EmployeeChildrenRepository">

    <insert id="create" keyColumn="id" keyProperty="employeeChildren.id" useGeneratedKeys="true">
        Insert into Employee_children (employee_id, child_id) values (#{employeeId},#{childId})
    </insert>

    <select id="findById" resultMap="EmployeeResultMap">
        Select ec.id as id, ec.children_id as employee_id from Employee_children ec where ec.employee_id =
        #{employeeChildrenId}
    </select>

    <delete id="delete">
        Delete from Employee_children where id = #{id}
    </delete>

    <resultMap id="EmployeeResultMap" type="com.solvd.carservice.domain.employee.EmployeeChildren" autoMapping="false">
        <id property="id" column="id"/>
        <association property="employeeId" column="employee_id"/>
        <association property="childrenId" column="child_id"/>
    </resultMap>

</mapper>
